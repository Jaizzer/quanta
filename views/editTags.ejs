<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <link rel="stylesheet" href="/style.css">
  <script src="/addTag.js" defer></script>
  <script src="/editTagName.js" defer></script>
  <script src="/deleteTag.js" defer></script>
</head>

<body>
  <div class="header">
    <h1>Edit Tags</h1>
    <a href="/tags"><button class="done-edit-btn">Done</button></a>
  </div>
  <% if(tags.length > 0) {%>
  <% tags.forEach(tag => { %>
  <form action="/tags/delete" method="POST">
    <input type="text" value="<%= tag.id %>" name='tagID' hidden>
    <div class="tag-name" data-id="<%= tag.id %>"><%= tag.name %></div>
    <button type="button" class="delete-tag-btn">🗑️</button>
  </form>
  <% }) %>
  <% }  else {%>
  <div class="search-default-message">
    <div class="icon-container">
    </div>
    <h2>Add tags to easily access items</h2>
    <button class="add-tag-btn">Add tag</button>
  </div>
  <% }%>

  <%- include('partials/nav') %>
</body>

</html>