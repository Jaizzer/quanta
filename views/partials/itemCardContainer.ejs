<div class="items-container">
  <% items.forEach(item => { %>
  <a href="/items/<%= item.id %>">
    <div class="item-card">
      <div class="item-image"></div>
      <h3 class="item-name"><%= item.parentItemName || item.name %></h3>
      <% if (item.parentItemName) { %>
      <div class="variant-name"><%= item.name %></div>
      <% } %>
      <% if (item.quantity) {%>
      <div class="item-quantity"><%= item.quantity %><%= item.quantity <= 1 ? ` ${item.measurement}`  : ` ${item.measurement}s` %></div>
      <% }%>
    </div>
  </a>
  <% }); %>
</div>